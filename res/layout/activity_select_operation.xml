<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient"
    android:padding="16dp"
    android:layoutDirection="rtl"
    android:textDirection="rtl">

    <LinearLayout
        android:id="@+id/rootContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="top|center_horizontal"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- هدر بالا: آیکن + عنوان + فلش -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/imgHeaderNext"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/backicon"
                android:contentDescription="@string/app_name" />


            <TextView
                android:id="@+id/txtTitleAdmin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="منوی مشتری"
                android:textColor="#CC0000"
                android:textSize="20sp"
                android:gravity="center"
                android:fontFamily="@font/iransansxdemibold" />
            <ImageView
                android:id="@+id/imgHeaderIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/customericon"
                android:contentDescription="@string/app_name" />

        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />
        <!-- کارت بزرگ خرید -->
        <LinearLayout
            android:id="@+id/btnBuy"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/bg_customer_tile_red"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="24dp">



            <ImageView
                android:id="@+id/imgBuy"
                android:layout_width="72dp"

                android:layout_height="72dp"
                android:src="@drawable/buyicon"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/txtBuy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="30dp"
                android:text="خرید"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:fontFamily="@font/iransansxdemibold"
                android:gravity="center_vertical|left" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:id="@+id/btnBalance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_customer_tile_red"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="12dp"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imgBalance"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/balance"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/txtBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="موجودی"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/iransansxdemibold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnStatement"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_customer_tile_red"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="12dp"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imgStatement"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/recipticon"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/txtStatement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="صورتحساب"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/iransansxdemibold" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/btnEditInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_customer_tile_red"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="12dp"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imgEditInfo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/customericon"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/txtEditInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="ویرایش اطلاعات"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:fontFamily="@font/iransansxdemibold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnIncrease"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_customer_tile_white"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="12dp"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imgIncrease"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/addbalaceicon"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/txtIncrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="افزایش موجودی"
                    android:textColor="#000066"
                    android:textSize="16sp"
                    android:fontFamily="@font/iransansxdemibold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
