<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/bg_green_gradient"
    android:layoutDirection="rtl"
    android:textDirection="rtl">

    <!-- کارت اصلی -->
    <LinearLayout
        android:id="@+id/boxBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/bg_white_card">

        <!-- بخش بالایی لوگو و وضعیت -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/reslogo"
                android:layout_alignParentLeft="true" />

            <ImageView
                android:id="@+id/imgStatus"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/recsuccess"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <!-- عنوان -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="پرداخت موفق"
            android:textSize="26sp"
            android:textColor="#006633"
            android:gravity="center"
            android:paddingTop="10dp"
            android:fontFamily="sans-serif"/>

        <!-- زیرعنوان -->
        <TextView
            android:id="@+id/txtSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textColor="#b00020"
            android:textSize="18sp"
            android:paddingBottom="10dp"
            android:fontFamily="sans-serif" />

        <!-- مبلغ -->
        <TextView
            android:id="@+id/txtAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="125,000 ریال"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="20sp"
            android:paddingBottom="10dp"
            android:fontFamily="sans-serif" />

        <!-- جدول -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- باشگاه -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="باشگاه"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/txtClub"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="باشگاه مشتریان کنعانی"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>

            <!-- شعبه -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="شعبه"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/txtBranch"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="سالن کنعانی"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>

            <!-- زمان -->
            <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="14:18"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:text="1404/09/02"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>

            <!-- پایانه -->
            <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="پایانه"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/txtTerminal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="41254521"
                    android:gravity="left"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>

            <!-- پذیرنده -->
            <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="پذیرنده"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/txtMerchant"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="2154212124"
                    android:gravity="left"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>

            <!-- شماره پیگیری -->
            <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="شماره پیگیری"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/txtTracking"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="213332131313"
                    android:gravity="left"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>

            <!-- شماره کارت -->
            <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="شماره کارت"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/txtCard"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="21541****313050"
                    android:gravity="left"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>

            <!-- پشتیبانی -->
            <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="شماره امداد مشتریان"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/txtSupport"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="021–2255412544"
                    android:gravity="left"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- دکمه‌ها -->
    <LinearLayout
        android:layout_below="@id/boxBackground"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnPrint"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="پرینت رسید مشتری"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:background="@drawable/bg_btn_blue" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="بازگشت"
            android:textSize="18sp"
            android:textColor="#008F43"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_btn_white" />
    </LinearLayout>

</RelativeLayout>
