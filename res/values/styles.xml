<resources>

    <!-- تم اصلی برنامه -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>

        <!-- چون اسپلش توی تصویر قرمزه، استاتوس‌بار باید پنهان یا شفاف باشه -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- ناوبری طبق دیزاین تو -->
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>
    <style name="KeypadButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:background">@drawable/button_store_bg</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14pt</item>
        <item name="android:fontFamily">@font/iransansxdemibold</item>
    </style>

    <!-- تم مخصوص اکتیویتی‌های فول‌اسکرین -->
    <style name="AppTheme.FullScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- تم اختصاصی ساجد -->
    <style name="Theme.SajedPOS" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- دیالوگ کارت PIN -->
    <style name="SajedDialogCard">
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">24dp</item>
        <item name="android:radius">12dp</item>
    </style>
    <!-- استایل ورودی‌ها -->
    <style name="SajedInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_input_admin</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:fontFamily">@font/iransansxdemibold</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <!-- استایل پایه دکمه‌ها -->
    <style name="SajedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/iransansxdemibold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SajedButton.Red" parent="SajedButton">
        <item name="android:background">@drawable/bg_btn_red</item>
    </style>

    <style name="SajedButton.Green" parent="SajedButton">
        <item name="android:background">@drawable/bg_btn_green</item>
    </style>

    <style name="SajedButton.Blue" parent="SajedButton">
        <item name="android:background">@drawable/bg_btn_blue</item>
    </style>

    <style name="SajedButton.Yellow" parent="SajedButton">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:background">@drawable/bg_btn_yellow</item>
    </style>


</resources>
