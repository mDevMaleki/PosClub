<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.hssco.club"
    android:targetSandboxVersion="2"
    android:versionCode="30212"
    android:versionName="3.0.212" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="smartpos.deviceservice.permission.Printer" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="false"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.SajedPOS"
        android:usesCleartextTraffic="true" >
        <activity
            android:name="net.hssco.club.SplashActivity"
            android:theme="@style/AppTheme.FullScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.hssco.club.PaymentResultActivity"
            android:theme="@style/Theme.SajedPOS" />
        <activity
            android:name="net.hssco.club.CustomerPinActivity"
            android:theme="@style/Theme.SajedPOS" />
        <activity
            android:name="net.hssco.club.AdminPinActivity"
            android:theme="@style/Theme.SajedPOS" />
        <activity
            android:name="net.hssco.club.EditCustomerActivity"
            android:theme="@style/Theme.SajedPOS" />
        <activity
            android:name="net.hssco.club.AdminMenuActivity"
            android:theme="@style/Theme.SajedPOS" />
        <activity
            android:name="net.hssco.club.ChangeAdminPinActivity"
            android:theme="@style/Theme.SajedPOS" />
        <activity
            android:name="net.hssco.club.MerchantMenuActivity"
            android:theme="@style/Theme.SajedPOS" />
        <activity
            android:name="net.hssco.club.WelcomeActivity"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name="net.hssco.club.SelectOperationActivity"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name="net.hssco.club.AmountActivity"
            android:theme="@style/AppTheme.FullScreen" />
    </application>

</manifest>